@model VkClient

@if (User.IsInRole("admin"))
{
    <hr />
    <form method="post" asp-controller="Options" asp-action="VkClientSet">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="VkClientId" />
        <div class="form-group">
            <label asp-for="ClientId"></label><br />
            <input asp-for="ClientId" class="form-control" autocomplete="off" />
            <span asp-validation-for="ClientId"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClientSecret"></label><br />
            <input asp-for="ClientSecret" class="form-control" autocomplete="off" />
            <span asp-validation-for="ClientSecret"></span>
        </div>
        <div class="form-group">
            <label asp-for="RedirectUri"></label><br />
            <input asp-for="RedirectUri" class="form-control" />
            <span asp-validation-for="RedirectUri"></span>
        </div>
        <div class="form-group">
            <label asp-for="Display"></label><br />
            <input asp-for="Display" class="form-control" />
            <span asp-validation-for="Display"></span>
        </div>
        <div class="form-group">
            <label asp-for="Scope"></label><br />
            <input asp-for="Scope" class="form-control" />
            <span asp-validation-for="Scope"></span>
        </div>
        <div class="form-group">
            <label asp-for="ResponseType"></label><br />
            <input asp-for="ResponseType" class="form-control" />
            <span asp-validation-for="ResponseType"></span>
        </div>
        <div class="form-group">
            <label asp-for="State"></label><br />
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State"></span>
        </div>
        <div class="form-group">
            <label asp-for="Revoke"></label><br />
            <input asp-for="Revoke" class="form-control" />
            <span asp-validation-for="Revoke"></span>
        </div>
        <div class="form-group">
            <label asp-for="Version"></label><br />
            <input asp-for="Version" class="form-control" />
            <span asp-validation-for="Version"></span>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="InstagramQueryId"></label><br />
            <input asp-for="InstagramQueryId" class="form-control" />
            <span asp-validation-for="InstagramQueryId"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-danger form-control" />
        </div>
    </form>
}